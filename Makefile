		--data-path $(DATA_DIR)/processed/v1_segment \
		--name yolov8n_seg_baseline
	$(PYTHON) $(SCRIPTS_DIR)/train_yolo.py \
		--config $(CONFIG_DIR)/yolo/segmentation/yolov8s-seg.yaml \
		--data-path $(DATA_DIR)/processed/v1_segment \
		--name yolov8s_seg_final
