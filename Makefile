	@echo "$(GREEN)üîÑ Processamento autom√°tico - SEGMENTA√á√ÉO POLIGONAL...$(RESET)"
ifndef INPUT
	@echo "$(RED)‚ùå Erro: Especifique INPUT=caminho_dos_dados_raw$(RESET)"
	@exit 1
