# Download b√°sico com configura√ß√µes padr√£o
.PHONY: download-dataset
download-dataset:
	@echo "$(CYAN)üì• Baixando dataset do Roboflow...$(RESET)"
	python scripts/download_roboflow.py --output $(DATA_DIR)/raw

# Download com processamento autom√°tico
.PHONY: download-and-process
download-and-process:
	@echo "$(CYAN)üì• Baixando e processando dataset...$(RESET)"
	python scripts/download_roboflow.py \
		--output $(DATA_DIR)/raw \
		--process-after

# Download de vers√£o espec√≠fica
.PHONY: download-version
download-version:
	@echo "$(CYAN)üì• Baixando vers√£o espec√≠fica...$(RESET)"
ifndef VERSION
	@echo "$(RED)‚ùå Erro: Especifique VERSION=numero_da_versao$(RESET)"
	@exit 1
endif
	python scripts/download_roboflow.py \
		--version $(VERSION) \
		--output $(DATA_DIR)/raw

# Download em formato espec√≠fico
.PHONY: download-format
download-format:
	@echo "$(CYAN)üì• Baixando em formato espec√≠fico...$(RESET)"
ifndef FORMAT
	@echo "$(RED)‚ùå Erro: Especifique FORMAT=yolov8|coco|pascal-voc$(RESET)"
	@exit 1
endif
	python scripts/download_roboflow.py \
		--format $(FORMAT) \
		--output $(DATA_DIR)/raw

# Download com configura√ß√µes customizadas
.PHONY: download-custom
download-custom:
	@echo "$(CYAN)üì• Download customizado...$(RESET)"
	python scripts/download_roboflow.py \
		--workspace $(WORKSPACE) \
		--project $(PROJECT) \
		--version $(VERSION) \
		--format $(FORMAT) \
		--api-key $(API_KEY) \
		--output $(DATA_DIR)/raw

# Workflow completo: download + processamento + treinamento r√°pido
.PHONY: workflow-complete
workflow-complete:
	@echo "$(MAGENTA)üîÑ WORKFLOW COMPLETO: Download + Processamento + Teste$(RESET)"
	make download-and-process
	make train-quick
	@echo "$(GREEN)‚úÖ Workflow completo finalizado!$(RESET)"

# Workflow completo para TCC: download + processamento + treinamentos finais - SEGMENTA√á√ÉO ‚≠ê
.PHONY: workflow-tcc-complete workflow-tcc-complete-detect

workflow-tcc-complete:
	@echo "$(MAGENTA)üéì WORKFLOW TCC COMPLETO - SEGMENTA√á√ÉO POLIGONAL$(RESET)"
	@echo "$(CYAN)1/7 üì• Baixando dataset...$(RESET)"
	make download-dataset
	@echo "$(CYAN)2/7 üìä Processando dados SEGMENTA√á√ÉO...$(RESET)"
	make process-auto INPUT=$(DATA_DIR)/raw/*
	@echo "$(CYAN)3/7 üß™ Teste r√°pido SEGMENTA√á√ÉO...$(RESET)"
	make train-quick
	@echo "$(CYAN)4/7 üöÄ Treinando modelos SEGMENTA√á√ÉO finais...$(RESET)"
	make train-final-nano
	make train-final-small
	make train-final-medium
	@echo "$(CYAN)5/7 üì¶ Treinando DETEC√á√ÉO (compara√ß√£o)...$(RESET)"
	make train-final-detect-small
	@echo "$(CYAN)6/7 üìà Gerando compara√ß√£o...$(RESET)"
	make compare-final
	@echo "$(CYAN)7/7 üìù Gerando relat√≥rio...$(RESET)"
	make generate-report
	@echo "$(GREEN)üéâ WORKFLOW TCC COMPLETO FINALIZADO!$(RESET)"
	@echo "$(YELLOW)üìä Todos os resultados est√£o em: experiments/$(RESET)"

workflow-tcc-complete-detect:
	@echo "$(MAGENTA)üéì WORKFLOW TCC COMPLETO - DETEC√á√ÉO$(RESET)"
	@echo "$(CYAN)1/6 üì• Baixando dataset...$(RESET)"
	make download-dataset
	@echo "$(CYAN)2/6 üìä Processando dados DETEC√á√ÉO...$(RESET)"
	make process-detect INPUT=$(DATA_DIR)/raw/*
	@echo "$(CYAN)3/6 üß™ Teste r√°pido DETEC√á√ÉO...$(RESET)"
	make train-quick-detect
	@echo "$(CYAN)4/6 üöÄ Treinando modelos DETEC√á√ÉO finais...$(RESET)"
	make train-final-detect-nano
	make train-final-detect-small
	make train-final-detect-medium
	@echo "$(CYAN)5/6 üìà Gerando compara√ß√£o...$(RESET)"
	make compare-final
	@echo "$(CYAN)6/6 üìù Gerando relat√≥rio...$(RESET)"
	make generate-report
	@echo "$(GREEN)üéâ WORKFLOW TCC DETEC√á√ÉO COMPLETO FINALIZADO!$(RESET)"

