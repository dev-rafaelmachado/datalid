	@echo "$(GREEN)üîÑ Processamento COMPLETO (SEGMENTA√á√ÉO + DETEC√á√ÉO)...$(RESET)"
ifndef INPUT
	@echo "$(RED)‚ùå Erro: Especifique INPUT=caminho_dos_dados_raw$(RESET)"
